SPLASH_FILE=/etc/motd

[ ! -f "$SPLASH_FILE" -o "$splash" == "no" ] || cat "$SPLASH_FILE"

export PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/opt/cartesi/bin
DEFAULT_ENV_FILE="/etc/environment"

mount /proc
mount /sys

random_seed=/var/run/random-seed
if [ -f $random_seed ]; then
    cat $random_seed | rndaddentropy
    chmod 600 $random_seed
fi

for dev in /dev/mtdblock[1-7]; do
    if [ -b $dev -a "$(blkid -s TYPE -o value $dev)" = "ext2" ]; then
        mtdblock=`basename $dev`
        mntpoint=`cat /sys/block/${mtdblock}/device/name`
        mkdir -p /mnt/$mntpoint
        mount -t ext2 /dev/${mtdblock} /mnt/${mntpoint}
    fi
done

/bin/busybox hostname -F /etc/hostname
/sbin/ifconfig lo 127.0.0.1

if [ -n "$*" ]; then
    if [ -c /dev/rollup ]; then
        chown root:dapp /dev/rollup
        chmod 660 /dev/rollup
    fi

    if [ -c /dev/yield ]; then
        chown root:dapp /dev/yield
        chmod 660 /dev/yield
    fi

    export PS1='\h:\w # '
    if [ -f "$DEFAULT_ENV_FILE" ]; then
        source $DEFAULT_ENV_FILE
    fi
    if [ "$single" == "yes" ]; then
        export HOME=/
        setsid cttyhack /bin/sh -c "$*"
    else
        export HOME=/home/dapp/
        cd $HOME
        setsid cttyhack /bin/su -p dapp -s /bin/sh -c "$*"
    fi
else
    echo "Nothing to do."
fi


for dev in /dev/mtdblock[1-7]; do
    if [ -b $dev -a "$(blkid -s TYPE -o value $dev)" = "ext2" ]; then
        umount $dev
    fi
done

mount -o ro,remount /

poweroff -f
